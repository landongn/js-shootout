{
	"name": "scarlet",
	"description": "A content management system.",
	"version": "0.0.1",
	"systemDependencies": {
		"python": ">= 2.7.2",
		"virtualenv": {
			"version": ">= 1.7.2",
			"install": "sudo pip install virtualenv",
			"upgrade": "sudo pip install virtualenv --upgrade"
		},
		"ruby": {
			"version": ">= 1.8.7",
			"install": "https://gist.github.com/3900651",
			"upgrade": "brew update && brew upgrade rbenv"
		},
		"gem": ">= 1.3.6",
		"bundle": {
			"version": ">= 1.2.0",
			"install": "gem install bundler",
			"upgrade": "gem update bundler"
		}
	},
	"scripts" : {
		"install": "./config/init/scarlet.js"
	},
	"config": {
		"replaceVars": false,
		"requiredPaths": [
			"scarlet"
		],
		"excludedPaths": [],
		"adminPath": ["scarlet", "scarlet", "cms"],
		"repo": "https://github.com/ff0000/scarlet.git"
	}
}
